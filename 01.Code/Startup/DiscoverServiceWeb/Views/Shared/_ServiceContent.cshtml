
<table class="table table-bordered table-hover table-striped table-condensed">
    <thead>
        <tr>
            <td width="40%">名称</td>
            <td width="60%">描述</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Services)
        {
            <tr>
                <td>
                    <a href="~/ServiceDiscovery/ServiceDetail/@(item.InterfaceName.Replace(".","-"))" target="_blank">@(item.InterfaceName)</a>
                </td>
                <td>
                    @(item.Description)
                </td>
            </tr>
        }
    </tbody>
</table> 